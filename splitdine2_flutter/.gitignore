# Minimal .gitignore for SplitDine Mobile App
# Only track essential files for iOS and Android development

# Dart/Flutter essentials
.dart_tool/
.packages
.metadata
pubspec.lock
.flutter-plugins
.flutter-plugins-dependencies

# Build outputs
build/
.pub-cache/
.pub/

# IDE files
.idea/
.vscode/
*.iml
*.code-workspace

# Platform folders (exclude entirely for mobile-only app)
/web/
/windows/
/linux/
/macos/

# iOS platform folder (exclude entirely - can be regenerated by Flutter)
ios/

# Android platform folder (exclude entirely - can be regenerated by Flutter)
android/

# Generated plugin files
lib/generated_plugin_registrant.dart
**/GeneratedPluginRegistrant.*
**/generated_plugin_registrant.*
**/generated_plugins.cmake

# Environment and secrets
.env*
**/secrets/
**/keys/
google-services.json
GoogleService-Info.plist

# Firebase
.firebase/
.firebaserc
firebase.json

# Logs and temporary files
*.log
*.tmp
*.temp
*.bak
*.backup
logs/

# OS files
.DS_Store
Thumbs.db
Desktop.ini
$RECYCLE_BIN/

# Test files (uncomment if you want to exclude tests)
# test/

# Coverage
coverage/
lcov.info
